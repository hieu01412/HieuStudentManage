    <dataSource component="Magento_Ui/js/grid/provider" name="studentmanage_student_listing_data_source">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">student_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Lof_HieuStudentManage::student_index</aclResource>
        <dataProvider class="Magento\Cms\Ui\Component\DataProvider" name="studentmanage_student_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>student_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>


    <columns name="studentmanage_student_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="cms/page/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">student_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">studentmanage_student_listing.studentmanage_student_listing.studentmanage_student_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">studentmanage_student_listing.studentmanage_student_listing.studentmanage_student_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>index_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="student_id">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="gender">
            <settings>
                <filter>text</filter>
                <label translate="true">Gender</label>
            </settings>
        </column>
        <column name="address">
            <settings>
                <filter>text</filter>
                <label translate="true">Address</label>
            </settings>
        </column>
        <column name="dateofbirth">
            <settings>
                <filter>text</filter>
                <label translate="true">Date Of Birth</label>
            </settings>
        </column>
        <column name="phonenumber">
            <settings>
                <filter>text</filter>
                <label translate="true">Phone Number</label>
            </settings>
        </column>
    </columns>
</listing>

